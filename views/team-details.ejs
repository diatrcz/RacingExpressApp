<%- include('header') %>
    
    <div class="container mx-auto mt-10 p-6">
        <!-- Header Section -->
        <div class="flex justify-between items-center mb-6">
          <h1 class="text-4xl font-bold text-gray-800"><%= team.fullName %></h1>
          <div class="flex space-x-2">
            <a href="/team/edit/<%= team._id %>" class="p-2 bg-gray-200 hover:bg-gray-300 rounded-full transition duration-300">
              <svg xmlns="http://www.w3.org/2000/svg" height="28px" viewBox="0 -960 960 960" width="28px" fill="#4b5563">
                <path d="M200-200h57l391-391-57-57-391 391v57Zm-80 80v-170l528-527q12-11 26.5-17t30.5-6q16 0 31 6t26 18l55 56q12 11 17.5 26t5.5 30q0 16-5.5 30.5T817-647L290-120H120Zm640-584-56-56 56 56Zm-141 85-28-29 57 57-29-28Z"/>
              </svg>
            </a>
            <% if (typeof cars !== 'undefined' && cars.length === 0) { %>
              <a 
                href="/team/del/<%= team._id %>" 
                class="p-2 bg-red-100 hover:bg-red-200 rounded-full transition duration-300"
                onclick="return confirm('Are you sure you want to delete this team?')"
              >
                <svg xmlns="http://www.w3.org/2000/svg" height="28px" viewBox="0 -960 960 960" width="28px" fill="#DC2626">
                  <path d="M280-120q-33 0-56.5-23.5T200-200v-520h-40v-80h200v-40h240v40h200v80h-40v520q0 33-23.5 56.5T680-120H280Zm400-600H280v520h400v-520ZM360-280h80v-360h-80v360Zm160 0h80v-360h-80v360ZM280-720v520-520Z"/>
                </svg>
              </a>
            <% } %>
          </div>
        </div>
      
        <div class="bg-white shadow-lg rounded-lg p-6">
          <p class="text-lg mb-3">
            <strong class="font-semibold text-gray-700">Full Name:</strong> <%= team.fullName %>
          </p>
          <p class="text-lg mb-3">
            <strong class="font-semibold text-gray-700">Base:</strong> <%= team.base %>
          </p>
          <p class="text-lg mb-3">
            <strong class="font-semibold text-gray-700">Team Chief:</strong> <%= team.teamChief %>
          </p>
          <p class="text-lg mb-3">
            <strong class="font-semibold text-gray-700">First Team Entry:</strong> <%= team.firstEntry %>
          </p>
          <p class="text-lg mb-3">
            <strong class="font-semibold text-gray-700">World Championships:</strong> <%= team.championships %>
          </p>
          <p class="text-lg mb-3">
            <strong class="font-semibold text-gray-700">Highest Finish:</strong> <%= team.highestfinish %>
          </p>
          <p class="text-lg mb-3">
            <strong class="font-semibold text-gray-700">Pole Positions:</strong> <%= team.polePositions %>
          </p>
          <p class="text-lg mb-3">
            <strong class="font-semibold text-gray-700">Fastest Laps:</strong> <%= team.fastestLaps %>
          </p>
        </div>

        <div class="mt-6">
          <a 
            href="/team"
            class="inline-block bg-transparent border border-gray-500 text-gray-500 hover:bg-gray-700 hover:border-transparent hover:text-white font-bold py-2 px-6 rounded-lg focus:outline-none focus:shadow-outline transition duration-300"
          >
            Back to Teams
          </a>
        </div>
      </div>
<%- include('footer') %>